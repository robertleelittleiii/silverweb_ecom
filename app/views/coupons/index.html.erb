<%= create_dialog_settings("Coupon Manager", "875", "450") %>

<%=page_attr_display(nil,"true") %>
<div class="cms-block">
<div class="cms-section">
      <div class="cms-heading">Store Wide Settings</div>
      <div class="cms-content">
        <p>
        <b>Store wide sale: (Percentage off of price)</b><br>
        <%=editablefieldcreate("store_wide_sale", @settings,"0.00",{:path=>"coupons/update"})%>
      </p>
      
      <p>
        <b>Store wide sale start: (Start Date)</b><br>
        <%=editabledatefieldcreate("store_wide_sale_start", @settings,"01/01/2001", {:format_type=>"date", :format_string=>"%m/%d/%Y",:path=>"coupons/update"})%>

      </p>
      
      <p>
        <b>Store wide sale end: (End Date)</b><br>
        <%=editabledatefieldcreate("store_wide_sale_end", @settings,"01/01/2001", {:format_type=>"date", :format_string=>"%m/%d/%Y",:path=>"coupons/update"})%>
      </p>
        <p>
          </br>
        </p>
      </div>
    </div>
</div>

<div class="cms-block">
    <div align="center">
        <!-- START:flash -->
        <% if flash[:notice] -%>
          <div id="notice"><%= flash[:notice] %></div>
        <% end -%>
        <!-- END:flash -->
    </div>

    <div id="site-pref-list">
        <center>
        <%= link_to 'New Coupon', {:action=>:create_empty_record,:typeofrecord=>"coupon"}, :class=>"button-link",:id=>"new-coupon", :remote=>true%>
        </center>
        <table cellpadding="0" cellspacing="0" border="0" class="display" id="coupon-table">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Description</th>
                    <th>Start</th>
                    <th>End</th>
                    <th>Value</th>
                    <th>-</th>
                </tr>
            </thead>
            <tbody>

            </tbody>
            <tfoot>
                <tr>
                    <th>Code</th>
                    <th>Description</th>
                    <th>Start</th>
                    <th>End</th>
                    <th>Value</th>
                    <th>-</th>
                </tr>
            </tfoot>
        </table>
    </div>


</div>
