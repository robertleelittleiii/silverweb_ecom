    <%#  end %>        
    <%#*</div>%>
          <% if @admin_active=="true" then %>
            <%= image_tag("interface/handle.png",:class=>"handle") %>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>
  <div class="pagination-div">  
    <div class="product-counts">
      Showing <%=@product_first%> to <%=@product_last%> of <%=@product_count%>
    </div>
    <%=paginate @products%>
  </div>
  </div>

