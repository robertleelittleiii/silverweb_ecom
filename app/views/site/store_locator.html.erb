    <div id="store-locator-container">
      <div id="page-header">
       
        <h1><span style="font-family: Chalkduster; color: #33cccc;">Find a Squirtini-Bikini Retailer near you</span></h1>
        <span style="font-size: 13px; font-family: arial;">Enter your zip code or address in the field below and click the Search button.</span>
        <p> </p>
      </div>
      
      <div id="form-container">
        <form id="user-location" method="post" action="#">
            <div id="form-input">
              <label for="address">Enter Address or Zip Code:</label>
              <%= text_field("address", :search, :size=>"20",  :value=>(@search rescue "Search Term") ,:class=>"locator-field", :id=>"address")  %>
             </div>
            
            <button id="submit" type="submit">Search</button>
        </form>
      </div>

      <div id="map-container">
        <div id="loc-list">
            <ul id="list"></ul>
        </div>
        <div id="map"></div>
      </div>
    </div>

    <script src="http://maps.google.com/maps/api/js?sensor=false"></script>
