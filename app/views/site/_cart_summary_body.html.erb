<br>
  <div class="cart-sumamry-row">
  <div class="cart-summary-title">Cart Total</div> <div class="cart-summary-price" id="cart-total-price"  ><%=number_to_currency(@checkout_cart.total_price) %></div>
</div>
<div class="cart-sumamry-row">
  <div class="cart-summary-title">Sales Tax(in NJ Only)</div>  <div class="cart-summary-price" id="cart-tax-price" ><%=number_to_currency(@checkout_cart.calc_tax) %></div>
</div>
<div class="cart-sumamry-row">
  <div class="cart-summary-title">Shipping</div> <div class="cart-summary-price" id="cart-shipping-price"  ><%=number_to_currency(@checkout_cart.calc_shipping[@checkout_cart.shipping_type]) %></div>
</div>
<% if not @checkout_cart.coupon_code==nil then %>
  <div class="cart-sumamry-row">
    <div class="cart-summary-title"><%=@checkout_cart.coupon_description %> </div> <div class="cart-summary-price" id="cart-coupon-code"  ><%=number_to_currency(@checkout_cart.coupon_value * -1) %></div>
  </div>
<% end %>

<% if @checkout_cart.calc_store_wide_sale > 0 then %>
  <div class="cart-sumamry-row">
    <div class="cart-summary-title">Store Wide Sale (<%=Settings.store_wide_sale.to_s %> % off) </div> <div class="cart-summary-price" id="cart-coupon-code"  ><%=number_to_currency(@checkout_cart.calc_store_wide_sale * -1) %></div>
  </div>
<% end %>

<div class="cart-sumamry-row">
  <div class="cart-summary-title">Summary Total</div> <div class="cart-summary-price" id="cart-summary-price" ><%=number_to_currency(@checkout_cart.grand_total_price) %></div>
</div>